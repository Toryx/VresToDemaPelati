<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiter"
    tools:context=".PassChange">


    <Button
        android:id="@+id/kataxwrisi"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/but"
        android:elevation="20dp"
        android:text="Καταχώριση Κωδικού"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordd"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/passwordd"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Νεος Kωδικός Προσβασης"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#7A7A7E"
        android:textColorHint="#7A7A7E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>